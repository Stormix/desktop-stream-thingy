{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "desktop-stream-thingy",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.stormix.desktop-stream-thingy",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../public/audio/*.mp3"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "desktop-stream-thingy",
        "width": 600,
        "height": 400,
        "visible": true
      }
    ]
  }
}
